#version 330 core
out vec4 FragColor;

in vec2 TextCoord;
in vec3 diffuse;

uniform sampler2D texture1; // this will be filled automatically by Opengl
uniform sampler2D texture2;
void main() 
{
	FragColor = mix(texture(texture1,TextCoord),texture(texture2,TextCoord),0.2)* vec4(diffuse,1.0); // texture sampler, correspoding texture coordinate
}